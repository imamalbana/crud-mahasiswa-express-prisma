generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Fakultas {
  id      Int       @id @default(autoincrement())
  nama    String    @unique
  jurusan Jurusan[]
}

model Jurusan {
  id         Int       @id @default(autoincrement())
  nama       String    @unique
  fakultasId Int
  fakultas   Fakultas  @relation(fields: [fakultasId], references: [id])
  mahasiswa  Mahasiswa[]
}

model Mahasiswa {
  id        Int      @id @default(autoincrement())
  nama      String
  nim       String   @unique
  jurusanId Int
  jurusan   Jurusan  @relation(fields: [jurusanId], references: [id])
}
